# App
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Mongo (used by src/lib/db.js)
# For docker-compose use the service name 'mongo' and root creds above
# MONGO_URI=mongodb://root:example@mongo:27017/dcabot?authSource=admin
# MONGO_URL=mongodb://root:rootpass@mongo:27017/crypto-bots?authSource=admin
# MONGO_URL=mongodb://root:example@mongo:27017/crypto-bots?authSource=admin
# MONGO_URL="mongodb://root:example@127.0.0.1:27017/dcabot?authSource=admin"
# REDIS_URL="redis://127.0.0.1:6379"
# PG_CONNECTION_STRING=postgres://dcabot:dcabot_pass@localhost:5432/dcabot
PG_CONNECTION_STRING=postgres://dcabot:dcabot_pass@localhost:5432/dcabot


REDIS_URL=redis://localhost:6379

# Redis
# REDIS_URL=redis://redis:6379
# REDIS_URL="redis://127.0.0.1:6379"


# Bot tick interval (ms)
BOT_TICK_MS=60000

# Lock settings (ms)
LOCK_TTL_MS=30000
LOCK_WAIT_MS=5000
LOCK_RENEW_THRESHOLD_MS=10000

# Rate limiter capacities (tune to exchange limits)
# (Note: RateLimiter implementation uses code-level map; these envs are optional if you modify code to read them)
RATE_LIMIT_BYBIT=80
RATE_LIMIT_MEXC=60

# Recon/worker tuning
RECON_CRON=*/5 * * * *  # if recon worker supports cron string (example)

# (Optional) Sentry DSN for error tracking
# SENTRY_DSN=

# (Optional) Encryption key for API key encryption (if implemented)
# AES_KEY=supersecretkey_32_chars_min

# DO NOT STORE LIVE KEYS HERE FOR PRODUCTION -- use a vault/secret manager.
# Example dev user credentials (for local testing only; remove in production)
DEV_TEST_API_KEY=<key>
DEV_TEST_API_SECRET=<key>

# AUTH_SERVICE_URL=https://backend.qbots.trade/internal/auth   # or http://localhost:8080 if testing locally
# Optionally if doing local JWT verification:
# JWT
JWT_SECRET=nodejwt
JWT_RESET_SECRET=nodejwt
JWT_EXPIRES_IN=24h
AUTH_SERVICE_URL=https://backend.qbots.trade/internal/auth   



